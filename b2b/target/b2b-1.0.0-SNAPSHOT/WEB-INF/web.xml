<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>b2b</display-name>
  <context-param>
	<param-name>webAppRootKey</param-name>
	<param-value>b2b.root</param-value>
  </context-param>
  <!-- log4j配置方案-->
    <context-param>
      <param-name>log4jConfigLocation</param-name>
      <param-value>/WEB-INF/classes/log4j.xml</param-value>
    </context-param>
    <context-param>
      <param-name>log4jRefreshInterval</param-name>
      <param-value>60000</param-value>
    </context-param>
    <listener>    
      <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>    
	</listener>
    <servlet>
        <servlet-name>appServlet</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>classpath:spring-servlet-context.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
  	 <context-param> 
		 <param-name>contextConfigLocation</param-name> 
		 <param-value>classpath:spring-servlet-context.xml,classpath:activiti-context.xml</param-value> 
	 </context-param>
    <listener>
	    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class> 
	    <!-- <listener-class>com.cf.framework.aop.SpringContextLoaderListener</listener-class>-->
  	</listener>
    <servlet>
        <servlet-name>initServlet</servlet-name>
        <servlet-class>com.cf.utils.config.initServlet</servlet-class>
        <load-on-startup>200</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>appServlet</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    
   <!-- 配置session存在时间 
    <session-config>
      <session-timeout>60</session-timeout>
    </session-config>
    <listener>
	  <listener-class>com.cf.framework.aop.SessionListener</listener-class>
    </listener>-->
    
    <welcome-file-list>
		<welcome-file>index_left.html</welcome-file>
  	</welcome-file-list>
  	
  	
  	
  	<!-- 错误相关页面--> 
  	<error-page>
  		<error-code>404</error-code>
  		<location>/TomcatTest/ErrorHandler</location>
  	</error-page>
</web-app>