<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE log4j:configuration SYSTEM "http://toolkit.alibaba-inc.com/dtd/log4j/log4j.dtd">  
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" threshold="debug">  
    <!-- Console output -->  
    <appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">  
        <layout class="org.apache.log4j.PatternLayout">  
            <param name="ConversionPattern" value="%d [%t] %-5p %c - %m%n"/>  
        </layout>  
    </appender>  
    
    <appender name="LOGFILE" class="org.apache.log4j.RollingFileAppender">  
        <param name="File" value="${b2b.root}/WEB-INF/logs/b2b.log"/> 
        <param name="DatePattern" value="'.'yyyy-MM-dd'.log'" /> 
        <param name="MaxFileSize" value="51200KB"/>  
        <param name="MaxBackupIndex" value="3"/>
        <layout class="org.apache.log4j.PatternLayout">  
            <!-- <param name="ConversionPattern" value="%d %p [%c] - [%m] -%n"/> -->
            <param name="ConversionPattern" value="%d [%t] %-5p %c - %m%n"/>   
        </layout>  
    </appender>
    
    

    <logger name="org.springframework.jdbc.core.JdbcTemplate">  
        <level value="DEBUG"/>  
        <!-- <appender-ref ref="STDOUT" /> -->  
    </logger> 
    

    <logger name="org.mybatis" additivity="true">    
        <level value="DEBUG" /> 
    </logger>   
	
    <logger name="java.sql.Connection">    
        <level value="DEBUG" />   
    </logger>
	   
    <logger name="java.sql.Statement">    
        <level value="DEBUG" />    
    </logger>
	   
    <logger name="java.sql.PreparedStatement">    
        <level value="DEBUG" /> 
    </logger>
    
    <logger name="GCZL">    
        <level value="DEBUG" /> 
    </logger>
    
    <!-- <logger name="java.sql.ResultSet" additivity="true">  
      <level value="DEBUG" />  
     </logger>  -->
    
    
    <logger name="org.activiti.engine.impl.persistence.entity.TaskEntity">
    	 <level value="DEBUG" /> 
    </logger>
<!-- show activiti sql
	<logger name="org.activiti.engine.impl.persistence.entity.HistoricActivityInstanceEntity">
    	 <level value="DEBUG" /> 
    </logger>
    <logger name="org.activiti.engine.impl.persistence.entity.HistoricDetailEntity">
    	 <level value="DEBUG" /> 
    </logger>
    <logger name="org.activiti.engine.impl.persistence.entity.HistoricIdentityLinkEntity">
    	 <level value="DEBUG" /> 
    </logger>
    <logger name="org.activiti.engine.impl.persistence.entity.HistoricProcessInstanceEntity">
    	 <level value="DEBUG" /> 
    </logger>
    <logger name="org.activiti.engine.impl.persistence.entity.HistoricTaskInstanceEntity">
    	 <level value="DEBUG" /> 
    </logger>
    <logger name="org.activiti.engine.impl.persistence.entity.HistoricVariableInstanceEntity">
    	 <level value="DEBUG" /> 
    </logger>-->

    
    
	 
	    
    <root>   
        <level value="INFO" /> 
        <appender-ref ref="STDOUT" />   
	    <appender-ref ref="LOGFILE" />
    </root>

       
</log4j:configuration>  

