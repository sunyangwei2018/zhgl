   <context:component-scan base-package="com"/>

    <!--支持上传文件 -->  
   	<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver"> 
   		<!-- 指定所上传文件的总大小不能超过4000KB。注意maxUploadSize属性的限制不是针对单个文件，而是所有文件的容量之和 --> 
    	<property name="maxUploadSize" value="104857600"/> 
    	<property name="defaultEncoding" value="utf-8" />
    </bean>

    <bean id="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean" scope="singleton">  
        <property name="jndiName">  
            <value>java:comp/env/jdbc/scm</value>  
        </property>  
    </bean>
    <bean id="dataSource_tms" class="org.springframework.jndi.JndiObjectFactoryBean" scope="singleton">  
        <property name="jndiName">  
            <value>java:comp/env/jdbc/tms</value>  
        </property>  
    </bean>

    <bean id="txManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource"/>
    </bean>
    <bean id="txManager_tms" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource_tms"/>
    </bean>
    <tx:advice id="txAdvice" transaction-manager="txManager">
        <tx:attributes>
            <tx:method name="insert*" propagation="REQUIRED"/>
            <tx:method name="update*" propagation="REQUIRED"/>
            <tx:method name="delete*" propagation="REQUIRED"/>
            <tx:method name="select*" propagation="SUPPORTS" read-only="true"/>
        </tx:attributes>
    </tx:advice>
    <tx:advice id="txAdvice_tms" transaction-manager="txManager_tms">
    	<tx:attributes>
            <tx:method name="insert*" propagation="REQUIRED" rollback-for="java.lang.Exception"/>
            <tx:method name="update*" propagation="REQUIRED" rollback-for="java.lang.Exception"/>
            <tx:method name="delete*" propagation="REQUIRED" rollback-for="java.lang.Exception"/>
            <tx:method name="call*" propagation="REQUIRED" rollback-for="java.lang.Exception"/>
            <tx:method name="select*" propagation="SUPPORTS" read-only="true"/>
        </tx:attributes>
    </tx:advice>
    <aop:config proxy-target-class="true">
        <!--<aop:pointcut id="fooServiceOperation" expression="execution(* com..*.*(..))"/>-->
         <aop:pointcut id="allTransactionMethod" expression="execution(* com..*.*(..))"/> 
       <aop:advisor advice-ref="txAdvice" pointcut-ref="allTransactionMethod"/>
        <!--<aop:advisor advice-ref="txAdvice_workflow" pointcut-ref="allTransactionMethod"/>-->
        <aop:advisor advice-ref="txAdvice_tms" pointcut-ref="allTransactionMethod"/>
    </aop:config>
    
   
    
	
    <bean id="scm" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource"/>
    </bean>
    
    <bean id="tms" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource_tms"/>
    </bean>
    
    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/**"/>
            <bean class="com.cf.framework.aop.JlInterceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>
    <bean id="viewResolver" class="com.cf.framework.aop.JlViewResolver" p:order="0">
<!--        <property name="viewName" value="JlView"/> -->
    </bean>
    <bean id="JlView" class="com.cf.framework.aop.JlView" p:url="" scope="prototype"/>
    <bean id="JlNullView" class="com.cf.framework.aop.JlNullView" p:url="" scope="prototype"/>
    <bean id="localeResolver" class="org.springframework.web.servlet.i18n.CookieLocaleResolver"/>
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/pages/"/>
        <property name="suffix" value=".jsp"/>
    </bean>
    
    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basenames"> 
            <list> 
                <value>ApplicationResources_zh_CN</value> 
            </list> 
        </property> 
    </bean>	
	
	<!-- 事务  -->  
	<bean id="scmManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">  
	        <property name="dataSource" ref="dataSource" />  
	        <qualifier value="scm"></qualifier>  
	</bean>
	<bean id="tmsManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">  
	        <property name="dataSource" ref="dataSource_tms" />  
	        <qualifier value="tms"></qualifier>  
	</bean> 
	<tx:annotation-driven transaction-manager="scmManager" />
	<tx:annotation-driven transaction-manager="tmsManager" />
    <!--  <bean id="LoginFilter" class="com.cf.forms.LoginFilter"></bean>-->
</beans>
